<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.LoginPage"
             BackgroundColor="AliceBlue">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN PAGE"/>
            <Entry Placeholder="email" Text="{Binding email, Mode=TwoWay}" />
            <Entry Placeholder="password" Text="{Binding password, Mode=TwoWay}" />
            <Button Text="Login" Command="{Binding Login}"/>

            <Button Text="Register" VerticalOptions="End" Command="{Binding Register}"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>