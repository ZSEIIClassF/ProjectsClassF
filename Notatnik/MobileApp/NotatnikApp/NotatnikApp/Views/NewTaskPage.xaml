<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotatnikApp.Views.NewTaskPage"
             BackgroundColor="{DynamicResource blue}">
    
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Entry Placeholder="np. wyjść z psem" Text="{Binding Name, Mode=TwoWay}"/>
            <Button Text="Add" Command="{Binding Post}" Style="{StaticResource button}"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>